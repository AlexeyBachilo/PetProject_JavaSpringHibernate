<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    <bean id="userService" class="com.petproject.service.UserService">
        <property name="userDAO" ref="userDAO"/>
    </bean>
    <bean id="userDAO" class="com.petproject.DAO.UserDAOImpl">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
    <bean id="taskService" class="com.petproject.service.TaskService">
        <property name="taskDAO" ref="taskDAO"/>
    </bean>
    <bean id="taskDAO" class="com.petproject.DAO.TaskDAOImpl">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
</beans>

