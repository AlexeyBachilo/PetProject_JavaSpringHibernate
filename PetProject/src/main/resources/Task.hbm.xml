<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping">
    <class name="com.petproject.entity.Task" table="tasks">
        <id column="id" name="taskId"  type="java.lang.Long">
            <generator class="increment"/>
        </id>
        <property column="taskname" name="taskName" type="java.lang.String"/>
        <property column="taskdescription" name="taskDescription" type="java.lang.String"/>
        <property column="userid" name="userId" type="java.lang.Long"/>
        <property column="complete" name="isCompleted" type="java.lang.Boolean"/>
        <property column="taskpoints" name="taskPoints" type="java.lang.Integer"/>
    </class>
</hibernate-mapping>